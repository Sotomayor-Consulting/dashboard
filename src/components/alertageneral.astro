---
const status = Astro.url.searchParams.get('status'); // "success" | "error" | null
const msg = Astro.url.searchParams.get('msg') || '';

const isSuccess = status === 'success';

const base =
	"fixed right-4 top-20 z-50 flex items-center w-full max-w-sm p-4 text-sm rounded-lg shadow-sm transition-all";

const variant = isSuccess
	? "text-green-700 bg-neutral-400 dark:text-green-300 dark:bg-neutral-800"
	: "text-red-700 bg-neutral-400 dark:text-red-300 dark:bg-neutral-800";

const iconVariant = isSuccess
	? "text-green-500 bg-green-100 dark:bg-green-800 dark:text-green-200"
	: "text-red-500 bg-red-100 dark:bg-red-800 dark:text-red-200";

const display = msg ? "" : "hidden";
---

<div
	id="toast-feedback"
	class={`${base} ${variant} ${display}`}
	role="alert"
>
	<div class={`inline-flex items-center justify-center shrink-0 w-8 h-8 rounded-lg ${iconVariant}`}>
		{isSuccess ? (
			<svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
				<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
			</svg>
		) : (
			<svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
				<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v5m0 3h.01M12 3a9 9 0 1 0 0 18 9 9 0 0 0 0-18Z" />
			</svg>
		)}
		<span class="sr-only">{isSuccess ? "Success icon" : "Error icon"}</span>
	</div>

	<div class="ms-3 text-sm font-normal">
		{msg}
	</div>

	<button
		type="button"
		class="ms-auto -mx-1.5 -my-1.5 bg-transparent text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:hover:bg-gray-700"
		data-dismiss-target="#toast-feedback"
		aria-label="Close"
	>
		<span class="sr-only">Cerrar</span>
		<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
			<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
		</svg>
	</button>
</div>

<script is:inline>
	(function () {
		const toast = document.getElementById('toast-feedback');
		if (!toast) return;

		const params = new URLSearchParams(window.location.search);
		const hasMsg = params.has('msg');

		if (hasMsg) {
			// Asegurar que esté visible por si el SSR lo dejó oculto
			toast.classList.remove('hidden');

			// Autocerrar a los 6s (solo añadimos 'hidden')
			const hide = () => {
				toast.classList.add('hidden');
			};
			const timer = setTimeout(hide, 6000);

			params.delete('msg');
			params.delete('status');
			const newUrl = `${location.pathname}${params.toString() ? '?' + params.toString() : ''}${location.hash}`;
			window.history.replaceState({}, '', newUrl);
		} else {
			// Asegurar oculto si no hay mensaje
			toast.classList.add('hidden');
		}
	})();
</script>
