
<div
	id="toast-feedback-2"
	class="fixed right-4 top-20 z-50 hidden items-center w-full max-w-sm p-4 text-sm rounded-lg shadow-sm transition-all bg-neutral-400 dark:bg-neutral-800 text-gray-900 dark:text-gray-100"
	role="alert"
>
	<!-- Wrapper del icono -->
	<div
		id="toast-icon-wrapper"
		class="inline-flex items-center justify-center shrink-0 w-8 h-8 rounded-lg bg-neutral-200 dark:bg-neutral-700"
	>
		<!-- Ícono éxito -->
		<svg
			id="toast-icon-success"
			class="w-4 h-4 hidden"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
		>
			<path
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M5 13l4 4L19 7"></path>
		</svg>

		<!-- Ícono error -->
		<svg
			id="toast-icon-error"
			class="w-4 h-4 hidden"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
		>
			<path
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M12 8v5m0 3h.01M12 3a9 9 0 1 0 0 18 9 9 0 0 0 0-18Z"></path>
		</svg>

		<span class="sr-only">Estado</span>
	</div>

	<!-- Mensaje -->
	<div class="ms-3 text-sm font-normal ms-3">
		<span class="ms-3"></span>
	</div>

	<!-- Botón cerrar -->
	<button
		type="button"
		class="ms-auto -mx-1.5 -my-1.5 bg-transparent text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:hover:bg-gray-700"
		data-dismiss-target="#toast-feedback-2"
		aria-label="Close"
	>
		<span class="sr-only">Cerrar</span>
		<svg
			class="w-3 h-3"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 14 14"
		>
			<path
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
		</svg>
	</button>
</div>

<script is:inline>
	(function () {
		const toast = document.getElementById('toast-feedback-2');
		if (!toast) return;

		const closeBtn = toast.querySelector(
			'[data-dismiss-target="#toast-feedback-2"]',
		);
		if (!closeBtn) return;

		closeBtn.addEventListener('click', () => {
			toast.classList.add('hidden');
			toast.classList.remove('flex');
		});
	})();
</script>
