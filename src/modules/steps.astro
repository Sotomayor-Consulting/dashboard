	];
	const activospan = ['text-white', 'p-3'];
	const activoh6 = ['text-base', 'font-semibold', 'text-white', 'mb-0.5'];
	const activop = ['text-xs', 'font-normal', 'text-gray-400'];

	// variables inactivas
	const inactivoli = [
		'relative',
		'flex-1',
		"after:content-['']",
		'after:w-0.5',
		'after:h-full',
		'after:bg-gray-200',
		'after:inline-block',
		'after:absolute',
		'after:-bottom-12',
		'after:left-1/4',
	];
	const inactivodiv1 = [
		'flex',
		'items-center',
		'gap-3.5',
		'bg-[#1d1d1d]',
		'p-3.5',
		'rounded-xl',
		'relative',
