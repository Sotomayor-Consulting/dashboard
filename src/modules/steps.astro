<script>
	document.addEventListener('DOMContentLoaded', () => {
		const paymentPanel = document.getElementById('paso3');
		const registerForm = document.getElementById('contenedor-registro');
		const nextStep = document.getElementById('paso4');
		const goToPaymentBtn = document.getElementById('boton-pago');
		const registerFormElement = document.getElementById('form-registro');
		const paymentError = document.getElementById('payment-error');
		const registerError = document.getElementById('register-error');
		const welcomeMessage = document.getElementById('welcome-message');

		// Funci√≥n para mostrar errores
		function showError(element: HTMLElement | null, message: string) {
			element.textContent = message;
			element?.classList.remove('hidden');
			setTimeout(() => {
				element?.classList.add('hidden');
			}, 5000);
		}

		// Funci√≥n para verificar sesi√≥n
		async function checkSession() {
			try {
				const response = await fetch('/api/auth/session-check');
				const data = await response.json();
				return data;
			} catch (error) {
				console.error('Error checking session:', error);
				return { isAuthenticated: false };
			}
		}

		// Funci√≥n para manejar usuario autenticado
		function handleAuthenticatedUser(userData: { name: any }) {
			// Ocultar panel de pago
			paymentPanel?.classList.add('hidden');
			paymentPanel?.classList.remove('flex');

			// Mostrar mensaje personalizado si tenemos datos del usuario
			if (userData && userData.name) {
				welcomeMessage.textContent = `¬°Bienvenido ${userData.name}!`;
			}

			// Mostrar siguiente paso
			nextStep?.classList.remove('hidden');
			nextStep?.classList.add('block');
		}

		// Funci√≥n para manejar usuario no autenticado
		function handleUnauthenticatedUser() {
			// Ocultar panel de pago
			paymentPanel?.classList.add('hidden');
			paymentPanel?.classList.remove('flex');

			// Mostrar formulario de registro
			registerForm?.classList.remove('hidden');
			registerForm?.classList.add('flex');
		}

		// Evento del bot√≥n "Ir al pago"
		goToPaymentBtn?.addEventListener('click', async () => {
			try {
				goToPaymentBtn.disabled = true;
				goToPaymentBtn.textContent = 'Verificando...';

				const sessionData = await checkSession();

				if (sessionData.isAuthenticated) {
					handleAuthenticatedUser(sessionData.user);
				} else {
					handleUnauthenticatedUser();
				}
			} catch (error) {
				console.error('Error in payment flow:', error);
				showError(
					paymentError,
					'Error al verificar tu sesi√≥n. Intenta nuevamente.',
				);
			} finally {
				goToPaymentBtn.disabled = false;
				goToPaymentBtn.textContent = 'Ir al pago';
			}
		});

		// Evento del formulario de registro
		registerFormElement?.addEventListener('submit', async (e) => {
			e.preventDefault();

			const submitButton = registerFormElement.querySelector(
				'button[type="submit"]',
			);
			submitButton.disabled = true;
			submitButton.textContent = 'Creando cuenta...';

			try {
				const formData = new FormData(registerFormElement);

				const response = await fetch('/api/auth/register', {
					method: 'POST',
					body: formData,
				});

				if (response.ok) {
					// Registro exitoso - ahora verificar la sesi√≥n
					const sessionData = await checkSession();

					if (sessionData.isAuthenticated) {
						handleAuthenticatedUser(sessionData.user);
					} else {
						// Si el registro fue exitoso pero no hay sesi√≥n, esperar un momento y reintentar
						setTimeout(async () => {
							const retryData = await checkSession();
							if (retryData.isAuthenticated) {
								handleAuthenticatedUser(retryData.user);
							} else {
								showError(
									registerError,
									'Registro exitoso. Por favor, revisa tu email para confirmar tu cuenta.',
								);
							}
						}, 1000);
					}
				} else {
					const errorText = await response.text();
					showError(
						registerError,
						errorText || 'Error en el registro. Intenta nuevamente.',
					);
				}
			} catch (error) {
				console.error('Registration error:', error);
				showError(registerError, 'Error de conexi√≥n. Intenta nuevamente.');
			} finally {
				submitButton.disabled = false;
				submitButton.textContent = 'Crear cuenta y continuar';
			}
		});

		// Manejar el formulario de pago (ejemplo)
		document.getElementById('payment-form')?.addEventListener('submit', (e) => {
			e.preventDefault();
			// L√≥gica de procesamiento de pago aqu√≠
			alert('Procesando pago...');
		});
	});
</script>
