<script src="https://js.stripe.com/v3/"></script>

<script>
	document.addEventListener('DOMContentLoaded', () => {
  // 1) Leer publishable key desde el div
  const cfg = document.getElementById('stripe-config');
  if (!cfg) {
    console.error('Stripe config div not found');
    return;
  }

  const pk = cfg.dataset.pk;
  if (!pk) {
    console.error('Stripe publishable key missing (data-pk vacío)');
    return;
  }

  // 2) Inicializar Stripe y Elements
  const stripe = Stripe(pk);
  const elements = stripe.elements();
  const cardElement = elements.create('card', {
    hidePostalCode: true,
    style: {
      base: {
        color: '#f9fafb', // texto principal (casi blanco)
        fontFamily:
          '"Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif',
        fontSize: '14px',
        '::placeholder': {
          color: '#9ca3af', // placeholder gris claro
        },
        iconColor: '#facc15', // color de iconos (puedes usar tu dorado)
      },
      invalid: {
        color: '#f97373', // rojo para errores
        iconColor: '#f97373',
      },
    },
  });
  cardElement.mount('#card-element');

  // 3) Referencias al DOM
  const btnContinue = document.getElementById('btn-continue');
  const btnBack = document.getElementById('btn-back');
  const stepPlans = document.getElementById('step-plans');
  const stepPayment = document.getElementById('step-payment');
  const paymentForm = document.getElementById('payment-form');
  const cardErrors = document.getElementById('card-errors');
  const statusMessage = document.getElementById('status-message');
  const payButton = document.getElementById('pay-button');
  const planSummary = document.getElementById('selected-plan-summary');

  // Resumen de precios
  const baseEl = document.getElementById('summary-base');
  const feeEl = document.getElementById('summary-fee');
  const totalEl = document.getElementById('summary-total');

  let currentClientSecret: null = null;

  // 4) Obtener el plan seleccionado (id_servicios)
  function getSelectedPlan() {
    const radio = document.querySelector('input[name="plan"]:checked');
    if (!radio) return null;

    const label = radio.closest('label') || radio.parentElement;
    const titleEl = label?.querySelector('h4');

    const rawPrice = radio.dataset.price;
    const price = rawPrice ? parseFloat(rawPrice) : NaN;

    return {
      id: radio.value, // id_servicios (UUID)
      label: titleEl ? titleEl.textContent.trim() : 'Plan seleccionado',
      price, // precio en USD
    };
  }

  // 5) Función para actualizar el resumen de precios
  function formatUSD(amount: unknown) {
    if (!Number.isFinite(amount)) return '$0.00';
    return '$' + amount.toFixed(2);
  }

  function updatePriceSummary(plan: { id?: any; label?: string; price: any; }) {
    if (!plan || !Number.isFinite(plan.price)) {
      baseEl.textContent = '$0.00';
      feeEl.textContent = '$0.00';
      totalEl.textContent = '$0.00';
      return;
    }

    const base = plan.price;
    const feePercent = 0.045;
    const fee = base * feePercent;
    const total = base + fee;

    baseEl.textContent = formatUSD(base);
    feeEl.textContent = formatUSD(fee);
    totalEl.textContent = formatUSD(total);
  }

  // 6) Llamar al backend para crear el PaymentIntent
  async function createPaymentIntent(planId: any) {
    statusMessage.textContent = 'Preparando el pago...';
    payButton.disabled = true;

    try {
      const res = await fetch('/api/payment/payment-intent', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ planId }),
      });

      const data = await res.json();

      if (!res.ok || !data.clientSecret) {
        throw new Error(data.error || 'Error al crear el pago');
      }

      currentClientSecret = data.clientSecret;
      statusMessage.textContent = 'Ingresa los datos de tu tarjeta.';
    } catch (err) {
      console.error(err);
      statusMessage.textContent = 'No se pudo preparar el pago. Intenta nuevamente.';
    } finally {
      payButton.disabled = false;
    }
  }

  // 7) Click en "Continuar con el pago"
  if (btnContinue) {
    btnContinue.addEventListener('click', async () => {
      const plan = getSelectedPlan();
      if (!plan) {
        alert('Por favor selecciona un plan antes de continuar.');
        return;
      }

      planSummary.textContent = `Estás pagando: ${plan.label}`;
      
      // Actualizar el resumen de precios
      updatePriceSummary(plan);

      await createPaymentIntent(plan.id);

      // Mostrar step de pago y ocultar selección de plan
      stepPlans.classList.add('hidden');
      stepPayment.classList.remove('hidden');
    });
  }

  // 8) Volver a elegir plan
  if (btnBack) {
    btnBack.addEventListener('click', () => {
      stepPayment.classList.add('hidden');
      stepPlans.classList.remove('hidden');
      statusMessage.textContent = '';
      cardErrors.textContent = '';
    });
  }

  // 9) Submit del formulario de pago
  if (paymentForm) {
    paymentForm.addEventListener('submit', async (event) => {
      event.preventDefault();

      if (!currentClientSecret) {
        statusMessage.textContent = 'El pago no está listo. Vuelve a intentar (elige el plan de nuevo).';
        return;
      }

      payButton.disabled = true;
      statusMessage.textContent = 'Procesando pago...';
      cardErrors.textContent = '';

      try {
        const { error, paymentIntent } = await stripe.confirmCardPayment(currentClientSecret, {
          payment_method: {
            card: cardElement,
          },
        });

        if (error) {
          console.error(error);
          cardErrors.textContent = error.message || 'Error al procesar el pago.';
          statusMessage.textContent = 'No se pudo completar el pago.';
          payButton.disabled = false;
          return;
        }

        if (paymentIntent && paymentIntent.status === 'succeeded') {
          statusMessage.textContent = 'Pago realizado con éxito. Estamos iniciando el proceso de incorporación de tu LLC.';
          // Redirigir a página de éxito
          window.location.href = '/';
        } else {
          statusMessage.textContent = 'No se pudo completar el pago. Intenta nuevamente.';
          payButton.disabled = false;
        }
      } catch (err) {
        console.error(err);
        statusMessage.textContent = 'Ocurrió un error al procesar el pago.';
        payButton.disabled = false;
      }
    });
  }
});

</script>

