<script
	src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/datepicker.min.js"
></script>
<script>
	const checkbox = document.getElementById('toggleCheckbox');
	const target = document.getElementById('targetElement');
	const cambio = document.getElementById('Btn-cambio');
	const tablauno = document.getElementById('styled-profile');
	const tablados = document.getElementById('styled-dashboard');
	const boton1 = document.getElementById('profile-styled-tab');
	const boton2 = document.getElementById('dashboard-styled-tab');

	checkbox?.addEventListener('change', (event) => {
		if (event.target?.checked) {
			target?.classList.remove('hidden');
			target?.classList.add('block');
		} else {
			target?.classList.remove('block');
			target?.classList.add('hidden');
		}
	});

	cambio?.addEventListener('click', () => {
		tablauno?.classList.remove('block');
		tablauno?.classList.add('hidden');
		tablados?.classList.remove('hidden');
		tablados?.classList.add('block');
		boton2?.setAttribute('aria-selected', 'true');
		boton2?.classList.add(
			'text-purple-600',
			'hover:text-purple-600',
			'dark:text-purple-500',
			'dark:hover:text-purple-500',
			'border-purple-600',
			'dark:border-purple-500',
		);
		boton2?.classList.remove(
			'dark:border-transparent',
			'text-gray-500',
			'hover:text-gray-600',
			'dark:text-gray-400',
			'border-gray-100',
			'hover:border-gray-300',
			'dark:border-gray-700',
			'dark:hover:text-gray-300',
		);
		boton1?.setAttribute('aria-selected', 'false');
	});
</script>
