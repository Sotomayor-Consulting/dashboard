<script>
	document.addEventListener('DOMContentLoaded', function () {
		const checkbox = document.querySelector('input[type="checkbox"]');

		// Función para manejar la visibilidad
		function toggleDivs() {
			const showDiv = document.getElementById(checkbox.dataset.show);
			const hideDiv = document.getElementById(checkbox.dataset.hide);

			if (checkbox.checked) {
				// Mostrar un div y ocultar el otro
				if (showDiv) {
					showDiv.classList.remove('hidden');
					showDiv.classList.add('grid');
				}
				if (hideDiv) {
					hideDiv.classList.add('hidden');
					hideDiv.classList.remove('grid');
				}
			} else {
				// Estado desactivado - revertir
				if (showDiv) {
					showDiv.classList.add('hidden');
					showDiv.classList.remove('grid');
				}
				if (hideDiv) {
					hideDiv.classList.remove('hidden');
					hideDiv.classList.add('grid');
				}
			}
		}

		// Verificar el estado inicial
		toggleDivs();

		// Añadir event listener para cambios
		checkbox.addEventListener('change', toggleDivs);
	});
</script>
