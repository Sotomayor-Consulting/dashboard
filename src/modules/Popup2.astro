<div id="actionModal2" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 max-h-full bg-black bg-opacity-80">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-sm dark:bg-[#1d1d1d]">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600 border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Elige una opción
                </h3>
                <button id="closeModal2" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="select-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Cerrar modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5">
                <ul class="space-y-4 mb-4">
					<li>
                        
                        <a href="" class="inline-flex items-center justify-between w-full p-3 text-gray-900 bg-white border border-gray-200 rounded-lg cursor-pointer dark:hover:text-gray-300 dark:border-gray-500 dark:peer-checked:text-white peer-checked:border-[#8c681d] dark:peer-checked:border-[#8c681d]peer-checked:text-blue-600 hover:text-gray-900 hover:bg-gray-100 dark:text-white dark:bg-neutral-800 dark:hover:bg-[#8c681d] transition-colors">                           
                            <div class="block w-full">
                                <div class="w-full text-lg font-semibold text-center">Realizar Pago</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        
                        <a href="" class="inline-flex items-center justify-between w-full p-5 text-gray-900 bg-white border border-gray-200 rounded-lg cursor-pointer dark:hover:text-gray-300 dark:border-gray-500 dark:peer-checked:text-white peer-checked:border-[#8c681d] dark:peer-checked:border-[#8c681d]peer-checked:text-blue-600 hover:text-gray-900 hover:bg-gray-100 dark:text-white dark:bg-neutral-800 dark:hover:bg-[#8c681d] transition-colors" title="Asesorate previamente antes de obtener tu paquete">                           
                            <div class="block w-full">
                                <div class="w-full text-lg font-semibold text-center">Agendar Reunión Gratuita</div>
                                <div class="text-gray-500 dark:text-gray-400 text-sm italic text-center px-5">Asesorate previamente antes de obtener tu paquete</div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div> 


<script>
	// Script simple para mostrar/ocultar el modal
	document.addEventListener('DOMContentLoaded', function () {
		const openButton = document.getElementById('openModal2');
		const closeButton = document.getElementById('closeModal2');
		const modal = document.getElementById('actionModal2');

		openButton?.addEventListener('click', function () {
			modal?.classList.remove('hidden');
			modal?.classList.add('flex');
		});

		closeButton?.addEventListener('click', function () {
			modal?.classList.remove('flex');
			modal?.classList.add('hidden');
		});

		// Cerrar al hacer clic fuera del contenido
		modal?.addEventListener('click', function (e) {
			if (e.target === modal) {
				modal?.classList.remove('flex');
				modal?.classList.add('hidden');
			}
		});

		// Cerrar con la tecla Escape
		document.addEventListener('keydown', function (e) {
			if (e.key === 'Escape') {
				modal?.classList.remove('flex');
				modal?.classList.add('hidden');
			}
		});
	});
</script>
