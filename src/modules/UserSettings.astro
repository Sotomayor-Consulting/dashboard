/* eslint max-lines: 'off' */
import { supabase } from '../lib/supabase';
import PictureUploader from '../components/PictureUploader.astro';

// ⚡ Restaurar sesión desde cookies
const accessToken = Astro.cookies.get('sb-access-token');
const refreshToken = Astro.cookies.get('sb-refresh-token');

if (accessToken && refreshToken) {
	await supabase.auth.setSession({
		access_token: accessToken.value,
		refresh_token: refreshToken.value,
	});
}

const {
	data: { user },
} = await supabase.auth.getUser();

let testRow = null;
if (user) {
	const { data } = await supabase
		.from('usuarios')
		.select(
			'nombre, apellido, pais_id, ciudad, direccion_linea1, direccion_linea2, telf, fecha_nacimiento, organizacion, cargo, departamento, codigo_postal, tipo_identificacion, numero_de_identificacion, tipo_persona, user_id',
		)
		.eq('user_id', user.id)
		.single();
	testRow = data;
}

const { data: paises } = await supabase
	.from('paises')
	.select('id, iso, nombre_paises, codigo_telf')
	.order('nombre_paises');

const { data: facturacion } = await supabase
	.from('datos_facturacion')
	.select('*')
	.eq('user_id', user?.id)
	.single();

const email = user?.email;

type Opcion = {
	value: string;
	label: string;
};

const opcionesPerfil: Opcion[] = [
	{ value: 'Cédula', label: 'Cédula' },
	{ value: 'RUC', label: 'RUC' },
	{ value: 'ID', label: 'ID' },
	{ value: 'Pasaporte', label: 'Pasaporte' },
	{ value: 'EIN', label: 'EIN' },
];

const TipoPersonaOptions: Opcion[] = [
