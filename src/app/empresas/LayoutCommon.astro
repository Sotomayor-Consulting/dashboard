---
import pkg from '../../../package.json' assert { type: 'json' };
import { url } from '../../lib/data.js';

const { class: clazz } = Astro.props;

import { supabase } from '../../lib/supabase';

// Restaura sesión desde cookies (RLS)
const at = Astro.cookies.get('sb-access-token');
const rt = Astro.cookies.get('sb-refresh-token');
if (at && rt) {
  await supabase.auth.setSession({ access_token: at.value, refresh_token: rt.value });
}

// 1) Tomar el slug de la ruta dinámica /empresa/[slug]/...
const { slug } = Astro.params;

// 2) Buscar la empresa por slug
const { data: empresa, error: empErr } = await supabase
  .from('empresa')
  .select('empresa_id, nombre')
  .eq('slug', slug)
  .single();

if (empErr || !empresa) {
  // Manejo simple de error / fallback
  throw new Error('Empresa no encontrada para el slug proporcionado.');
}

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{empresa?.nombre} - Plataforma</title>

		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={pkg.description} />
		<meta name="" content={pkg.description} />
		<link rel="icon" type="image/svg+xml" href="/src/assets/icono.svg" />
		<link
			rel="sitemap"
			type="application/xml"
			href={url('sitemap-index.xml')}
		/>

		<meta name="author" content="Sotomayor Consulting" />
		<meta name="copyright" />

		<script is:inline>
			if (
				localStorage.getItem('color-theme') === 'dark' ||
				(!('color-theme' in localStorage) &&
					window.matchMedia('(prefers-color-scheme: dark)').matches)
			) {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body
		class:list={[
			//
			clazz,
			'bg-gray-50 dark:bg-[#1d1d1d]',
			'scrollbar scrollbar-w-3 scrollbar-thumb-rounded-[0.25rem]',
			'scrollbar-track-slate-200  scrollbar-thumb-gray-400',
			'dark:scrollbar-track-gray-900 dark:scrollbar-thumb-gray-700',
		]}
	>
		<slot />
	</body>
</html>

<script>
	import 'flowbite';
</script>

<style is:global>
	@import url('https://fonts.cdnfonts.com/css/inter');
</style>
