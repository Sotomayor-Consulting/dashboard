---
import FooterStacked from './FooterStacked.astro';
import LayoutCommon from './LayoutCommon.astro';
import NavBarStacked from './NavBarStacked.astro';
---

<LayoutCommon>
	<NavBarStacked />

	<div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-[#1d1d1d]">
		<div>
			<img
				src="/src/assets/edificios-fondo.avif"
				alt="Fondo edificios"
				class="z-0 dark:opacity-10 opacity-50 absolute object-center h-screen w-full object-cover"
			/>
		</div>
		<div
			id="main-content"
			class="relative w-full max-w-screen-2xl mx-auto h-full overflow-y-auto min-h-screen z-10"
		>
			<div class="px-4 pt-6 2xl:px-0">
				<slot />
			</div>

			<FooterStacked />
		</div>
	</div>
</LayoutCommon>
