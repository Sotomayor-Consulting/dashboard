---
import FooterSidebar from './FooterSidebar.astro';
import Banner from '../components/Banner.astro'
import LayoutCommon from './LayoutCommon.astro';
import NavBarSidebar from './NavBarSidebar.astro';
import SideBar from './SideBar.astro';
---

<LayoutCommon>
	<NavBarSidebar />

	<SideBar />

	<div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-neutral-800">
		<div
			id="main-content"
			class="relative w-full h-full overflow-y-auto bg-gray-50 lg:ml-64 dark:bg-[#1d1d1d] min-h-screen"
		>
			<Banner />

			<slot />
			
			<FooterSidebar />
		</div>
	</div>
</LayoutCommon>
