<script
	type="module"
	define:vars={{
		SB_URL: import.meta.env.SUPABASE_URL,
		SB_ANON: import.meta.env.SUPABASE_ANON_KEY,
		USER_ID: user?.id ?? '',
	}}
>
	import { createClient } from 'https://esm.sh/@supabase/supabase-js@2';

	if (!SB_URL || !SB_ANON) {
		console.error('[Realtime] Faltan env PUBLIC_SUPABASE_*');
	} else if (!USER_ID) {
		console.info('[Realtime] Sin usuario; no suscribe.');
	} else {
		const supabase = createClient(SB_URL, SB_ANON, {
			auth: { persistSession: true, autoRefreshToken: true },
			realtime: { params: { eventsPerSecond: 10 } },
		});

		//  NUEVO: si el token se refresca, actualiza el token de Realtime
		supabase.auth.onAuthStateChange((_event, session) => {
			supabase.realtime.setAuth(session?.access_token ?? null);
		});

		// Sincroniza sesi贸n desde cookies si hace falta (para que Realtime tenga token)
		const readCookie = (name) =>
			document.cookie
				.split('; ')
				.find((c) => c.startsWith(name + '='))
				?.split('=')[1];

		const at = readCookie('sb-access-token');
		const rt = readCookie('sb-refresh-token');
		const { data: sess } = await supabase.auth.getSession();
		if (!sess?.session && at && rt) {
			await supabase.auth.setSession({ access_token: at, refresh_token: rt });
		}

		//  NUEVO: aseguramos que Realtime tenga el token ANTES de crear/subscribir el canal
		await supabase.realtime.setAuth();

		const topic = `user:${USER_ID}:notifications`;
		let channel = supabase.channel(topic, {
			config: { private: true, broadcast: { self: true, ack: true } },
		});

		// === TUS HANDLERS ===
		const listEl = document.getElementById('notifications-list');
		const badgeBtn = document.getElementById('notifications-toggle');

		const getBadgeEl = () =>
			badgeBtn?.querySelector('span.inline-flex.w-6.h-6');
		const ensureBadge = () => {
			let b = getBadgeEl();
			if (!b) {
				b = document.createElement('span');
				b.className =
					'absolute inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white bg-red-500 border-2 border-white rounded-full -top-2 -end-2 dark:border-gray-900 animate-pulse';
				b.textContent = '0';
				badgeBtn?.appendChild(b);
			}
			return b;
		};
		const incrementBadge = (delta) => {
			const badge = getBadgeEl() ?? ensureBadge();
			const current = parseInt(badge.textContent || '0', 10) || 0;
			const next = Math.max(0, current + delta);
			badge.textContent = String(next);
			if (next === 0) badge.remove();
		};

		const parsePayload = (p) => ({
			rec: p?.new ?? p?.record ?? p?.payload?.new ?? p?.data ?? null,
			old: p?.old ?? p?.payload?.old ?? null,
		});
		const formatDate = (iso) => {
			try {
				return new Date(iso).toLocaleDateString();
			} catch {
				return '';
			}
		};
		const renderItem = (n) =>
			`
      <div class="flex px-4 py-3 border-b hover:bg-gray-100 dark:hover:bg-neutral-700/5 dark:border-gray-600" data-id="${n.id}">
        <div class="flex-shrink-0">
          <img class="rounded-full w-11 h-11" src="/src/assets/avatarSCI.png" alt="Avatar"/>
        </div>
        <div class="w-full pl-3">
          <div class="text-gray-500 font-normal text-sm mb-1.5 dark:text-gray-400 flex flex-col">
            <span class="font-semibold text-gray-900 dark:text-white">${n.message ?? ''}</span>
            ${n.link ? `<a href="${n.link}" target="_blank" class="my-1 text-primary-400 hover:text-blue-500">${n.mensaje_link ?? 'Abrir'}</a>` : ''}
          </div>
          <div class="flex justify-between">
            <span class="text-xs text-gray-400">${formatDate(n.created_at ?? new Date().toISOString())}</span>
            ${!n.is_read ? `<button class="mark-as-read text-xs font-medium text-[#8c681d] dark:text-neutral-400 inline-flex hover:dark:text-primary-400" data-id="${n.id}">Marcar como le铆da</button>` : ''}
          </div>
        </div>
      </div>
    `.trim();

		// Delegaci贸n: marcar como le铆da
		listEl?.addEventListener('click', async (e) => {
			const btn = e.target.closest('.mark-as-read');
			if (!btn) return;
			const id = btn.getAttribute('data-id');
			btn.remove();
			incrementBadge(-1);
			const { error } = await supabase
				.from('notifications')
				.update({ is_read: true })
				.eq('id', id)
				.eq('user_id', USER_ID);
			if (error) {
				console.error('[notifications] Error al marcar como le铆da:', error);
				incrementBadge(+1);
			}
		});

		//  NUEVO: logs de depuraci贸n para ver si llegan eventos realmente
		channel
			.on('broadcast', { event: 'notification_created' }, (payload) => {
				console.log('[RT] notification_created', payload); // <-- DEBUG
				const { rec } = parsePayload(payload) || {};
				if (!rec?.id) return;
				const html = renderItem(rec);
				listEl?.insertAdjacentHTML('afterbegin', html);
				const empty = listEl?.querySelector(
					'.dark\\:text-neutral-500.text-neutral-400',
				);
				empty?.remove();
				const rows = listEl?.querySelectorAll('[data-id]');
				if (rows && rows.length > 5) rows[rows.length - 1].remove();
				if (rec.is_read === false) incrementBadge(+1);
			})
			.on('broadcast', { event: 'notification_status_changed' }, (payload) => {
				console.log('[RT] notification_status_changed', payload); // <-- DEBUG
				const { rec } = parsePayload(payload) || {};
				if (!rec?.id) return;
				const row = listEl?.querySelector(`[data-id="${rec.id}"]`);
				row?.querySelector('.mark-as-read')?.remove();
			})
			.on('broadcast', { event: 'notification_updated' }, (payload) => {
				console.log('[RT] notification_updated', payload); // <-- DEBUG
				const { rec } = parsePayload(payload) || {};
				if (!rec?.id) return;
				const row = listEl?.querySelector(`[data-id="${rec.id}"]`);
				if (!row) return;
				if (rec.message != null)
					row.querySelector('span.font-semibold').textContent = rec.message;
				if (rec.link != null)
					row.querySelector('a[href]')?.setAttribute('href', rec.link);
				if (rec.mensaje_link != null) {
					const a = row.querySelector('a[href]');
					if (a) a.textContent = rec.mensaje_link;
				}
			})
			.on('broadcast', { event: 'notification_deleted' }, (payload) => {
				console.log('[RT] notification_deleted', payload); // <-- DEBUG
				const { old } = parsePayload(payload) || {};
				const id = old?.id;
				const row = id && listEl?.querySelector(`[data-id="${id}"]`);
				row?.remove();
			})

			//  NUEVO: handlers extra por si tu trigger estuviera emitiendo tg_op (INSERT/UPDATE/DELETE)
			.on('broadcast', { event: 'INSERT' }, (p) =>
				console.log('[RT] INSERT (fallback)', p),
			)
			.on('broadcast', { event: 'UPDATE' }, (p) =>
				console.log('[RT] UPDATE (fallback)', p),
			)
			.on('broadcast', { event: 'DELETE' }, (p) =>
				console.log('[RT] DELETE (fallback)', p),
			);

		await channel.subscribe((state, err) => {
			if (state === 'SUBSCRIBED')
				console.info('[notifications] Realtime conectado');
			if (state === 'CHANNEL_ERROR')
				console.error('[notifications] Error:', err);
			if (state === 'CLOSED') console.info('[notifications] Canal cerrado');
		});

		// Cleanup en navegaci贸n
		window.addEventListener('beforeunload', () => {
			if (channel) {
				supabase.removeChannel(channel);
				channel = null;
			}
		});
	}
</script>
