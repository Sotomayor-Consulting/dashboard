<script>
	import { createClient } from '@supabase/supabase-js';

	// Configuración de Supabase
	const supabaseUrl = 'https://tu-proyecto.supabase.co';
	const supabaseAnonKey = 'tu-anon-key-public';
	const supabase = createClient(supabaseUrl, supabaseAnonKey);

	// Función para recargar notificaciones
	async function reloadNotifications() {
		try {
			const { data: notifications } = await supabase
				.from('notifications')
				.select('*')
				.eq('user_id', window.currentUserId)
				.order('created_at', { ascending: false })
				.limit(5);

			if (notifications) {
				updateNotificationsUI(notifications);
			}
		} catch (error) {
			console.error('Error recargando notificaciones:', error);
		}
	}

	// Función para actualizar la UI
	function updateNotificationsUI(notifications) {
		const container = document.getElementById('notifications-container');
		if (!container) return;

		container.innerHTML =
			notifications.length === 0
				? '<div class="p-4 text-center text-gray-500">No hay notificaciones</div>'
				: notifications
						.map(
							(notification) => `
      <div class="notification-item p-4 border-b ${notification.is_read ? 'bg-gray-50' : 'bg-blue-50'}" data-id="${notification.id}">
        <p class="text-sm">${notification.message}</p>
        <div class="flex justify-between items-center mt-2">
          <span class="text-xs text-gray-500">
            ${new Date(notification.created_at).toLocaleDateString()}
          </span>
          ${
						!notification.is_read
							? `<button onclick="markAsRead('${notification.id}')" class="text-xs bg-blue-500 hover:bg-blue-700 text-white px-2 py-1 rounded">
              Marcar como leída
            </button>`
							: ''
					}
        </div>
      </div>
    `,
						)
						.join('');
	}

	// Función para marcar como leída
	async function markAsRead(notificationId) {
		try {
			const { error } = await supabase
				.from('notifications')
				.update({
					is_read: true,
					leido_en: new Date().toISOString(),
				})
				.eq('id', notificationId);

			if (!error) {
				// Recargar después de marcar como leída
				reloadNotifications();
			}
		} catch (error) {
			console.error('Error marcando como leída:', error);
		}
	}

	// Suscripción a cambios en tiempo real
	function setupRealtimeNotifications() {
		return supabase
			.channel('notifications-changes')
			.on(
				'postgres_changes',
				{
					event: '*', // INSERT, UPDATE, DELETE
					schema: 'public',
					table: 'notifications',
					filter: `user_id=eq.${window.currentUserId}`,
				},
				() => {
					// Recargar cuando haya cualquier cambio
					reloadNotifications();
				},
			)
			.subscribe();
	}

	// Inicializar cuando el DOM esté listo
	document.addEventListener('DOMContentLoaded', function () {
		// Pasar el user_id desde Astro
		window.currentUserId = document.getElementById('user-data')?.dataset.userId;

		if (window.currentUserId) {
			// Cargar notificaciones iniciales y suscribirse a cambios
			reloadNotifications();
			setupRealtimeNotifications();
		}
	});
</script>
