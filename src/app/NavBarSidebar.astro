/* eslint max-lines: 'off' */
import { supabase } from '../lib/supabase';
const { cookies } = Astro;

const accessToken = cookies.get('sb-access-token');
const refreshToken = cookies.get('sb-refresh-token');

import ColorModeSwitcher from '../components/ColorModeSwitcher.astro';
import SearchInput from '../components/SearchInput.astro';
const { data } = await supabase.auth.setSession({
	refresh_token: refreshToken.value,
	access_token: accessToken.value,
});

const {
	data: { user },
} = await supabase.auth.getUser();

let imagen = null;
if (user) {
	const { data } = await supabase
		.from('usuarios')
		.select('avatar_url')
		.eq('user_id', user.id)
		.single();
	imagen = data;
}

let testRow = null;
if (user) {
	const { data } = await supabase
		.from('usuarios')
		.select('nombre, apellido')
		.eq('user_id', user.id)
		.single();
	testRow = data;
}

let isAdmin = false;
if (user) {
	// usa tu funci칩n SECURITY DEFINER
	const { data: isAdminRes, error } = await supabase.rpc('is_admin', {
		uid: user.id,
	});
	if (!error) isAdmin = Boolean(isAdminRes);
}

const email = data?.user?.email;

let notifications = [];
let totalUnread = 0;
if (user) {
	// Consulta para las 5 notificaciones m치s recientes
	const { data } = await supabase
		.from('notifications')
		.select('*')
		.eq('user_id', user.id)
		.order('created_at', { ascending: false })
		.limit(5);
	notifications = data || [];

	// Contador de no le칤das (opcional, para mostrar badge)
	const { count } = await supabase
		.from('notifications')
		.select('*', { count: 'exact', head: true })
		.eq('user_id', user.id)
		.eq('is_read', false);
	totalUnread = count || 0;
}

export { notifications, totalUnread, user };
